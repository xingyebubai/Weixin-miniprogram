.product_area image { 
    width: 100%;
    height: 580rpx;
}
.product_details_container .product_display {
    display: flex;
    flex-direction: column;
    justify-content: left;
    box-shadow:  -20px -2px 20px black;
    margin: -10rpx 0 20rpx 0;
    padding: 8rpx 0 0 20rpx;
    background-color: #eef5ee;
    min-height: 180rpx;
    position: relative;
}
.product_display .add {
    height: 50rpx;
    width: 50rpx;
    position: absolute;
    right: 20rpx;
    bottom: 30%;
}

.product_details_container .product_describe {
    display: flex;
    flex-direction: column;
    justify-content: left;
    padding-left: 20rpx;
    background-color: #eef5ee;
    min-height: 180rpx;
}

