/* pages/orders/orders.wxss */
.order_container {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.order_container .view1 {
    border-radius: 40rpx;
    margin: 0 0 20rpx 0;
    width: 700rpx;
}
.order_container .address {
    min-height: 300rpx;
    background-color: #eef5ee;
}


.order_details .product_area{
    border-radius: 40rpx;
    background-color: #eef5ee;
    height: 220rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
    margin: 0 0 20rpx 0;
}
.product_area image {
    margin: 0 0 0 20rpx;
    height: 120rpx;
    width: 120rpx;
}

.product_area .product_info {
    position: relative;
    width: 427rpx;
    display: flex;
    flex-direction: column;
    align-items: left;
    margin: 0 0 0 20rpx;
    top: -20rpx;
    overflow: hidden;
    /* 文本溢出的部变成... 文本截断 */
    text-overflow: ellipsis;
    /* 当文本到达末尾时文本不换行 */
    white-space: nowrap;
}

.product_info .name {
    font-size: 25rpx;
    font-weight: bold;
    overflow: hidden;
    /* 文本溢出的部变成... 文本截断 */
    text-overflow: ellipsis;
    /* 当文本到达末尾时文本不换行 */
    white-space: nowrap;
}

.product_info .count{
    font-size: 23rpx;
}
.price {
    position: absolute;
    right: 10rpx;
    top: 70rpx;
    font-size: 30rpx;
}

.submit_order{
    display: flex;
    /* justify-content: right; */
    flex-direction: row;
    position: relative;
    width: 100%;
    justify-content: flex-end;
}

.total text{
    font-size: 50rpx;
    color: red;
    font-weight: bold;
}

.submit_order .submit {
    margin: 0 10rpx 0 20rpx;
    background-color: #0f9b0f;
    border-radius: 70rpx;
    width: 220rpx;
    text-align: center;
}
.submit_order .submit text {
    font-size: 30rpx;
    color: white;
    font-weight: bold;
}